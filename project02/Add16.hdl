/**
 * 16-bit integer adder.  out = a + b where a,b are 16-bit 
 * 2's complement representations of integers.  Overflow is 
 * neither detected nor handled.
 */

CHIP Add16 {

    IN  a[16], b[16];
    OUT out[16];

    PARTS:
	HalfAdder(a=a[0], b=b[0], carry=one, sum=out[0]);
	FullAdder(a=a[1], b=b[1], c=one, carry=two, sum=out[1]);
	FullAdder(a=a[2], b=b[2], c=two, carry=three, sum=out[2]);
	FullAdder(a=a[3], b=b[3], c=three, carry=four, sum=out[3]);
	FullAdder(a=a[4], b=b[4], c=four, carry=five, sum=out[4]);
	FullAdder(a=a[5], b=b[5], c=five, carry=six, sum=out[5]);
	FullAdder(a=a[6], b=b[6], c=six, carry=seven, sum=out[6]);
	FullAdder(a=a[7], b=b[7], c=seven, carry=eight, sum=out[7]);
	FullAdder(a=a[8], b=b[8], c=eight, carry=nine, sum=out[8]);
	FullAdder(a=a[9], b=b[9], c=nine, carry=ten, sum=out[9]);
	FullAdder(a=a[10], b=b[10], c=ten, carry=eleve, sum=out[10]);
	FullAdder(a=a[11], b=b[11], c=eleve, carry=twelv, sum=out[11]);
	FullAdder(a=a[12], b=b[12], c=twelv, carry=thirt, sum=out[12]);
	FullAdder(a=a[13], b=b[13], c=thirt, carry=fourt, sum=out[13]);
	FullAdder(a=a[14], b=b[14], c=fourt, carry=fifte, sum=out[14]);
	FullAdder(a=a[15], b=b[15], c=fifte, carry=sixte, sum=out[15]);
}

